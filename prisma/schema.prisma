generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================
// BEST ROLES SYSTEM
// ======================
model Role {
  id              String           @id @default(cuid())
  name            String           @unique
  description     String?
  users           User[]           @relation("UserRoles")
  rolePermissions RolePermission[]
}

model Permission {
  id              String                   @id @default(cuid())
  name            String                   @unique
  description     String?
  rolePermissions RolePermission[]
  userOverrides   UserPermissionOverride[]
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

model UserPermissionOverride {
  userId       String
  permissionId String
  allowed      Boolean  @default(true)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  user       User       @relation(fields: [userId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([userId, permissionId])
  @@index([permissionId], map: "idx_user_permission_overrides_permission")
  @@map("user_permission_overrides")
}

// -----------------------
// BetterAuth core models
// -----------------------
model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  emailVerified Boolean  @default(false)
  passwordHash  String?  @map("password_hash")
  name          String?
  image         String?
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  accounts         Account[]
  sessions         Session[]
  verifications    Verification[]
  adminSyncActions AdminSyncAction[]

  roles               Role[]                   @relation("UserRoles")
  permissionOverrides UserPermissionOverride[]
  ownedSubscriptions  ShopSubscription[]       @relation("OwnerSubscriptions")
  ownedInvoices       Invoice[]                @relation("OwnerInvoices")
  paymentRequests     BillingPaymentRequest[]  @relation("OwnerPaymentRequests")
  shops               Shop[]                   @relation("OwnerShops")

  // User hierarchy: who created this user
  createdBy     String? @map("created_by")
  createdByUser User?   @relation("CreatedUsers", fields: [createdBy], references: [id])
  createdUsers  User[]  @relation("CreatedUsers")

  // Staff belongs to exactly one shop (optional for non-staff users)
  staffShopId String? @map("staff_shop_id") @db.Uuid
  staffShop   Shop?   @relation("StaffShop", fields: [staffShopId], references: [id])

  @@map("users")
}

model Account {
  id             String    @id @default(cuid())
  accountId      String?   @map("account_id")
  providerId     String    @map("provider_id")
  providerUserId String    @default("") @map("provider_user_id")
  userId         String    @map("user_id")
  accessToken    String?   @map("access_token")
  refreshToken   String?   @map("refresh_token")
  idToken        String?   @map("id_token")
  expiresAt      DateTime? @map("expires_at") @db.Timestamptz(6)
  scope          String?
  password       String?
  profile        Json?
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id])

  @@unique([providerId, providerUserId])
  @@map("accounts")
}

model Session {
  id             String   @id @default(cuid())
  token          String   @unique
  userId         String   @map("user_id")
  expiresAt      DateTime @map("expires_at") @db.Timestamptz(6)
  ipAddress      String?  @map("ip_address")
  userAgent      String?  @map("user_agent")
  impersonatedBy String?  @map("impersonated_by")
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Verification {
  id         String   @id @default(cuid())
  userId     String?  @map("user_id")
  token      String   @unique
  identifier String
  expiresAt  DateTime @map("expires_at") @db.Timestamptz(6)
  type       String
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User? @relation(fields: [userId], references: [id])

  @@map("verifications")
}

model Jwks {
  id         String    @id @default(cuid())
  publicKey  String    @map("public_key")
  privateKey String    @map("private_key")
  alg        String?   @map("alg")
  crv        String?   @map("crv")
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  expiresAt  DateTime? @map("expires_at") @db.Timestamptz(6)

  @@map("jwks")
}

model Shop {
  id                  String   @id @default(uuid()) @db.Uuid
  ownerId             String   @map("owner_id")
  name                String
  address             String?
  phone               String?
  businessType        String   @default("tea_stall") @map("business_type")
  closingTime         String?  @map("closing_time")
  salesInvoiceEnabled Boolean  @default(false) @map("sales_invoice_enabled")
  salesInvoicePrefix  String?  @map("sales_invoice_prefix")
  nextSalesInvoiceSeq Int      @default(1) @map("next_sales_invoice_seq")
  queueTokenEnabled   Boolean  @default(false) @map("queue_token_enabled")
  queueTokenPrefix    String?  @map("queue_token_prefix")
  queueWorkflow       String?  @map("queue_workflow")
  nextQueueTokenSeq   Int      @default(1) @map("next_queue_token_seq")
  createdAt           DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  owner            User                    @relation("OwnerShops", fields: [ownerId], references: [id])
  products         Product[]
  queueTokens      QueueToken[]
  sales            Sale[]
  purchases        Purchase[]
  suppliers        Supplier[]
  supplierLedger   SupplierLedger[]
  purchasePayments PurchasePayment[]
  expenses         Expense[]
  cashEntries      CashEntry[]
  customers        Customer[]
  customerLedger   CustomerLedger[]
  staffMembers     User[]                  @relation("StaffShop")
  subscription     ShopSubscription?
  invoices         Invoice[]
  paymentRequests  BillingPaymentRequest[]

  @@index([ownerId], map: "idx_shops_owner_id")
  @@map("shops")
}

enum SubscriptionStatus {
  trialing
  active
  past_due
  canceled
}

enum InvoiceStatus {
  draft
  open
  paid
  void
  uncollectible
}

enum BillingPaymentRequestStatus {
  pending
  approved
  rejected
}

model SubscriptionPlan {
  id             String   @id @default(uuid()) @db.Uuid
  key            String   @unique
  name           String
  amount         Decimal  @db.Decimal(12, 2)
  intervalMonths Int      @default(1) @map("interval_months")
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  subscriptions ShopSubscription[]

  @@map("subscription_plans")
}

model ShopSubscription {
  id                 String             @id @default(uuid()) @db.Uuid
  shopId             String             @map("shop_id") @db.Uuid
  ownerId            String             @map("owner_id")
  planId             String             @map("plan_id") @db.Uuid
  status             SubscriptionStatus @default(trialing)
  currentPeriodStart DateTime           @map("current_period_start") @db.Timestamptz(6)
  currentPeriodEnd   DateTime           @map("current_period_end") @db.Timestamptz(6)
  nextInvoiceAt      DateTime?          @map("next_invoice_at") @db.Timestamptz(6)
  trialEndsAt        DateTime?          @map("trial_ends_at") @db.Timestamptz(6)
  graceEndsAt        DateTime?          @map("grace_ends_at") @db.Timestamptz(6)
  canceledAt         DateTime?          @map("canceled_at") @db.Timestamptz(6)
  createdAt          DateTime           @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt          DateTime           @updatedAt @map("updated_at") @db.Timestamptz(6)

  shop     Shop             @relation(fields: [shopId], references: [id])
  owner    User             @relation("OwnerSubscriptions", fields: [ownerId], references: [id])
  plan     SubscriptionPlan @relation(fields: [planId], references: [id])
  invoices Invoice[]

  @@unique([shopId], map: "uq_shop_subscriptions_shop_id")
  @@index([ownerId], map: "idx_shop_subscriptions_owner_id")
  @@map("shop_subscriptions")
}

model Invoice {
  id             String        @id @default(uuid()) @db.Uuid
  subscriptionId String        @map("subscription_id") @db.Uuid
  shopId         String        @map("shop_id") @db.Uuid
  ownerId        String        @map("owner_id")
  periodStart    DateTime      @map("period_start") @db.Timestamptz(6)
  periodEnd      DateTime      @map("period_end") @db.Timestamptz(6)
  amount         Decimal       @db.Decimal(12, 2)
  status         InvoiceStatus @default(open)
  dueDate        DateTime      @map("due_date") @db.Timestamptz(6)
  paidAt         DateTime?     @map("paid_at") @db.Timestamptz(6)
  createdAt      DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime      @updatedAt @map("updated_at") @db.Timestamptz(6)

  subscription    ShopSubscription        @relation(fields: [subscriptionId], references: [id])
  shop            Shop                    @relation(fields: [shopId], references: [id])
  owner           User                    @relation("OwnerInvoices", fields: [ownerId], references: [id])
  payments        InvoicePayment[]
  paymentRequests BillingPaymentRequest[]

  @@unique([subscriptionId, periodStart, periodEnd], map: "uq_billing_invoices_period")
  @@index([shopId], map: "idx_billing_invoices_shop_id")
  @@index([ownerId], map: "idx_billing_invoices_owner_id")
  @@index([status], map: "idx_billing_invoices_status")
  @@index([dueDate], map: "idx_billing_invoices_due_date")
  @@map("billing_invoices")
}

model InvoicePayment {
  id        String   @id @default(uuid()) @db.Uuid
  invoiceId String   @map("invoice_id") @db.Uuid
  amount    Decimal  @db.Decimal(12, 2)
  method    String
  reference String?
  paidAt    DateTime @map("paid_at") @db.Timestamptz(6)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  invoice Invoice @relation(fields: [invoiceId], references: [id])

  @@index([invoiceId], map: "idx_invoice_payments_invoice_id")
  @@map("invoice_payments")
}

model BillingPaymentRequest {
  id        String                      @id @default(uuid()) @db.Uuid
  invoiceId String                      @map("invoice_id") @db.Uuid
  ownerId   String                      @map("owner_id")
  shopId    String                      @map("shop_id") @db.Uuid
  method    String
  reference String?
  note      String?
  status    BillingPaymentRequestStatus @default(pending)
  createdAt DateTime                    @default(now()) @map("created_at") @db.Timestamptz(6)
  decidedAt DateTime?                   @map("decided_at") @db.Timestamptz(6)

  invoice Invoice @relation(fields: [invoiceId], references: [id])
  owner   User    @relation("OwnerPaymentRequests", fields: [ownerId], references: [id])
  shop    Shop    @relation(fields: [shopId], references: [id])

  @@index([invoiceId], map: "idx_billing_payment_requests_invoice_id")
  @@index([ownerId], map: "idx_billing_payment_requests_owner_id")
  @@index([status], map: "idx_billing_payment_requests_status")
  @@map("billing_payment_requests")
}

model BusinessType {
  id         String   @id @default(uuid()) @db.Uuid
  key        String   @unique
  label      String
  isActive   Boolean  @default(true) @map("is_active")
  fieldRules Json     @map("field_rules")
  stockRules Json     @map("stock_rules")
  unitRules  Json     @map("unit_rules")
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("business_types")
}

model BusinessProductTemplate {
  id               String   @id @default(uuid()) @db.Uuid
  businessType     String   @map("business_type")
  name             String
  category         String?
  defaultSellPrice Decimal? @map("default_sell_price") @db.Decimal(12, 2)
  isActive         Boolean  @default(true) @map("is_active")
  createdAt        DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@unique([businessType, name], map: "uq_business_product_templates_type_name")
  @@index([businessType], map: "idx_business_product_templates_type")
  @@index([businessType, isActive], map: "idx_business_product_templates_active")
  @@map("business_product_templates")
}

model Product {
  id         String   @id @default(uuid()) @db.Uuid
  shopId     String   @map("shop_id") @db.Uuid
  name       String
  category   String   @default("Uncategorized")
  buyPrice   Decimal? @map("buy_price") @db.Decimal(12, 2)
  sellPrice  Decimal  @map("sell_price") @db.Decimal(12, 2)
  stockQty   Decimal  @default("0") @map("stock_qty") @db.Decimal(12, 2)
  trackStock Boolean  @default(false) @map("track_stock")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  shop            Shop             @relation(fields: [shopId], references: [id])
  saleItems       SaleItem[]
  purchaseItems   PurchaseItem[]
  queueTokenItems QueueTokenItem[]

  @@index([shopId], map: "idx_products_shop")
  @@index([shopId, isActive], map: "idx_products_active")
  @@index([shopId, isActive, stockQty], map: "idx_products_low_stock")
  @@map("products")
}

model Purchase {
  id            String   @id @default(uuid()) @db.Uuid
  shopId        String   @map("shop_id") @db.Uuid
  supplierId    String?  @map("supplier_id") @db.Uuid
  supplierName  String?  @map("supplier_name")
  purchaseDate  DateTime @map("purchase_date") @db.Date
  paymentMethod String   @default("cash") @map("payment_method")
  totalAmount   Decimal  @map("total_amount") @db.Decimal(12, 2)
  paidAmount    Decimal  @map("paid_amount") @db.Decimal(12, 2)
  dueAmount     Decimal  @map("due_amount") @db.Decimal(12, 2)
  note          String?
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  shop     Shop              @relation(fields: [shopId], references: [id])
  supplier Supplier?         @relation(fields: [supplierId], references: [id])
  items    PurchaseItem[]
  payments PurchasePayment[]

  @@index([shopId, purchaseDate], map: "idx_purchases_shop_date")
  @@index([supplierId], map: "idx_purchases_supplier")
  @@map("purchases")
}

model PurchaseItem {
  id         String   @id @default(uuid()) @db.Uuid
  purchaseId String   @map("purchase_id") @db.Uuid
  productId  String   @map("product_id") @db.Uuid
  quantity   Decimal  @db.Decimal(12, 2)
  unitCost   Decimal  @map("unit_cost") @db.Decimal(12, 2)
  lineTotal  Decimal  @map("line_total") @db.Decimal(12, 2)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  purchase Purchase @relation(fields: [purchaseId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])

  @@index([purchaseId], map: "idx_purchase_items_purchase")
  @@index([productId], map: "idx_purchase_items_product")
  @@map("purchase_items")
}

model PurchasePayment {
  id           String    @id @default(uuid()) @db.Uuid
  shopId       String    @map("shop_id") @db.Uuid
  purchaseId   String    @map("purchase_id") @db.Uuid
  supplierId   String    @map("supplier_id") @db.Uuid
  amount       Decimal   @db.Decimal(12, 2)
  method       String    @default("cash") @map("payment_method")
  paidAt       DateTime  @map("paid_at") @db.Timestamptz(6)
  businessDate DateTime? @map("business_date") @db.Date
  note         String?
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  purchase Purchase @relation(fields: [purchaseId], references: [id])
  supplier Supplier @relation(fields: [supplierId], references: [id])
  shop     Shop     @relation(fields: [shopId], references: [id])

  @@index([shopId, paidAt], map: "idx_purchase_payments_shop_date")
  @@index([purchaseId], map: "idx_purchase_payments_purchase")
  @@index([supplierId], map: "idx_purchase_payments_supplier")
  @@index([shopId, businessDate], map: "idx_purchase_payments_shop_business_date")
  @@map("purchase_payments")
}

model Supplier {
  id        String   @id @default(uuid()) @db.Uuid
  shopId    String   @map("shop_id") @db.Uuid
  name      String
  phone     String?
  address   String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  shop      Shop              @relation(fields: [shopId], references: [id])
  purchases Purchase[]
  ledger    SupplierLedger[]
  payments  PurchasePayment[]

  @@unique([shopId, name], map: "uq_suppliers_shop_name")
  @@index([shopId], map: "idx_suppliers_shop")
  @@map("suppliers")
}

model SupplierLedger {
  id           String    @id @default(uuid()) @db.Uuid
  shopId       String    @map("shop_id") @db.Uuid
  supplierId   String    @map("supplier_id") @db.Uuid
  entryType    String    @map("entry_type")
  amount       Decimal   @db.Decimal(12, 2)
  note         String?
  entryDate    DateTime  @map("entry_date") @db.Timestamptz(6)
  businessDate DateTime? @map("business_date") @db.Date
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  shop     Shop     @relation(fields: [shopId], references: [id])
  supplier Supplier @relation(fields: [supplierId], references: [id])

  @@index([shopId], map: "idx_supplier_ledger_shop")
  @@index([supplierId], map: "idx_supplier_ledger_supplier")
  @@index([entryDate], map: "idx_supplier_ledger_entry_date")
  @@index([shopId, businessDate], map: "idx_supplier_ledger_shop_business_date")
  @@map("supplier_ledger")
}

model Sale {
  id               String      @id @default(uuid()) @db.Uuid
  shopId           String      @map("shop_id") @db.Uuid
  customerId       String?     @map("customer_id") @db.Uuid
  queueTokenSource QueueToken? @relation("QueueTokenSale")
  invoiceNo        String?     @map("invoice_no")
  invoiceIssuedAt  DateTime?   @map("invoice_issued_at") @db.Timestamptz(6)
  saleDate         DateTime    @default(now()) @map("sale_date") @db.Timestamptz(6)
  businessDate     DateTime?   @map("business_date") @db.Date
  totalAmount      Decimal     @map("total_amount") @db.Decimal(12, 2)
  paymentMethod    String      @default("cash") @map("payment_method")
  note             String?
  createdAt        DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  status           String      @default("COMPLETED")
  voidReason       String?     @map("void_reason")
  voidAt           DateTime?   @map("void_at") @db.Timestamptz(6)
  voidByUserId     String?     @map("void_by_user_id")

  shop      Shop       @relation(fields: [shopId], references: [id])
  customer  Customer?  @relation(fields: [customerId], references: [id])
  saleItems SaleItem[]

  @@unique([shopId, invoiceNo], map: "uq_sales_shop_invoice_no")
  @@index([shopId], map: "idx_sales_shop")
  @@index([shopId, invoiceNo], map: "idx_sales_shop_invoice")
  @@index([shopId, createdAt, id], map: "idx_sales_shop_created_id")
  @@index([shopId, status, createdAt], map: "idx_sales_shop_status_created")
  @@index([shopId, saleDate], map: "idx_sales_shop_sale_date")
  @@index([shopId, status, saleDate], map: "idx_sales_shop_status_sale_date")
  @@index([shopId, businessDate], map: "idx_sales_shop_business_date")
  @@index([shopId, status, businessDate], map: "idx_sales_shop_status_business_date")
  @@index([customerId], map: "idx_sales_customer")
  @@map("sales")
}

model SaleItem {
  id                  String   @id @default(uuid()) @db.Uuid
  saleId              String   @map("sale_id") @db.Uuid
  productId           String   @map("product_id") @db.Uuid
  productNameSnapshot String?  @map("product_name_snapshot")
  quantity            Decimal  @db.Decimal(12, 2)
  unitPrice           Decimal  @map("unit_price") @db.Decimal(12, 2)
  costAtSale          Decimal? @map("cost_at_sale") @db.Decimal(12, 2)
  // Prisma doesn't have a first-class generated column annotation; we'll add
  // the `generated always as (quantity * unit_price) stored` via SQL migration.
  // FIXED: Removed dbgenerated default (Neon/Postgres does not allow column refs in DEFAULT)
  lineTotal           Decimal  @map("line_total") @db.Decimal(12, 2)

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId], map: "idx_sale_items_sale")
  @@index([productId], map: "idx_sale_items_product")
  @@index([saleId, productId], map: "idx_sale_items_sale_product")
  @@map("sale_items")
}

model QueueToken {
  id            String    @id @default(uuid()) @db.Uuid
  shopId        String    @map("shop_id") @db.Uuid
  tokenNo       Int       @map("token_no")
  tokenLabel    String    @map("token_label")
  orderType     String    @default("dine_in") @map("order_type")
  customerName  String?   @map("customer_name")
  customerPhone String?   @map("customer_phone")
  note          String?
  totalAmount   Decimal   @default("0") @map("total_amount") @db.Decimal(12, 2)
  status        String    @default("WAITING")
  calledAt      DateTime? @map("called_at") @db.Timestamptz(6)
  inKitchenAt   DateTime? @map("in_kitchen_at") @db.Timestamptz(6)
  readyAt       DateTime? @map("ready_at") @db.Timestamptz(6)
  servedAt      DateTime? @map("served_at") @db.Timestamptz(6)
  cancelledAt   DateTime? @map("cancelled_at") @db.Timestamptz(6)
  settledSaleId String?   @map("settled_sale_id") @db.Uuid
  settledAt     DateTime? @map("settled_at") @db.Timestamptz(6)
  businessDate  DateTime? @map("business_date") @db.Date
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  shop        Shop             @relation(fields: [shopId], references: [id])
  settledSale Sale?            @relation("QueueTokenSale", fields: [settledSaleId], references: [id])
  items       QueueTokenItem[]

  @@unique([shopId, tokenNo], map: "uq_queue_tokens_shop_token_no")
  @@unique([settledSaleId], map: "uq_queue_tokens_settled_sale_id")
  @@index([shopId, status, createdAt], map: "idx_queue_tokens_shop_status_created")
  @@index([shopId, businessDate, tokenNo], map: "idx_queue_tokens_shop_business_token")
  @@map("queue_tokens")
}

model QueueTokenItem {
  id                  String   @id @default(uuid()) @db.Uuid
  tokenId             String   @map("token_id") @db.Uuid
  productId           String   @map("product_id") @db.Uuid
  productNameSnapshot String?  @map("product_name_snapshot")
  quantity            Decimal  @db.Decimal(12, 2)
  unitPrice           Decimal  @map("unit_price") @db.Decimal(12, 2)
  lineTotal           Decimal  @map("line_total") @db.Decimal(12, 2)
  createdAt           DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  token   QueueToken @relation(fields: [tokenId], references: [id])
  product Product    @relation(fields: [productId], references: [id])

  @@index([tokenId], map: "idx_queue_token_items_token")
  @@index([productId], map: "idx_queue_token_items_product")
  @@map("queue_token_items")
}

model Expense {
  id          String   @id @default(uuid()) @db.Uuid
  shopId      String   @map("shop_id") @db.Uuid
  amount      Decimal  @db.Decimal(12, 2)
  category    String
  expenseDate DateTime @default(now()) @map("expense_date") @db.Date
  note        String?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  shop Shop @relation(fields: [shopId], references: [id])

  @@index([shopId, expenseDate], map: "idx_expenses_shop_date")
  @@index([shopId], map: "idx_expenses_shop")
  @@map("expenses")
}

model CashEntry {
  id           String    @id @default(uuid()) @db.Uuid
  shopId       String    @map("shop_id") @db.Uuid
  entryType    String    @map("entry_type")
  amount       Decimal   @db.Decimal(12, 2)
  reason       String?
  businessDate DateTime? @map("business_date") @db.Date
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  shop Shop @relation(fields: [shopId], references: [id])

  @@index([shopId], map: "idx_cash_entries_shop")
  @@index([shopId, createdAt], map: "idx_cash_entries_shop_created")
  @@index([shopId, businessDate], map: "idx_cash_entries_shop_business_date")
  @@map("cash_entries")
}

model Customer {
  id            String    @id @default(uuid()) @db.Uuid
  shopId        String    @map("shop_id") @db.Uuid
  name          String
  phone         String?
  address       String?
  totalDue      Decimal   @default("0") @map("total_due") @db.Decimal(12, 2)
  lastPaymentAt DateTime? @map("last_payment_at") @db.Timestamptz(6)
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  shop   Shop             @relation(fields: [shopId], references: [id])
  sales  Sale[]
  ledger CustomerLedger[]

  @@index([shopId], map: "idx_customers_shop")
  @@index([phone], map: "idx_customers_phone")
  @@map("customers")
}

model CustomerLedger {
  id           String    @id @default(uuid()) @db.Uuid
