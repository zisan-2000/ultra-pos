{
  "name": "pos-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "realtime"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "test": "ts-node --esm --experimentalSpecifierResolution=node tests/unit/run.ts",
    "test:unit": "ts-node --esm --experimentalSpecifierResolution=node tests/unit/run.ts",
    "test:watch": "ts-node --esm --experimentalSpecifierResolution=node tests/unit/run.ts",
    "test:coverage": "ts-node --esm --experimentalSpecifierResolution=node tests/unit/run.ts",
    "seed": "tsx --tsconfig tsconfig.seed.json prisma/seed.ts",
    "realtime:dev": "npm run -w realtime dev",
    "realtime:start": "npm run -w realtime start",
    "ci:health": "bash scripts/ci-healthcheck.sh",
    "release:check-sw": "bash scripts/check-sw-cache-name.sh",
    "test:e2e": "playwright test"
  },
  "prisma": {
    "seed": "tsx --tsconfig tsconfig.seed.json prisma/seed.ts"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^16.1.1",
