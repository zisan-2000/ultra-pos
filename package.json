    "@socket.io/redis-adapter": "^8.3.0",
    "@tanstack/react-query": "^5.90.10",
    "better-auth": "^1.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "lucide-react": "^0.562.0",
    "next": "^16.1.6",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "recharts": "^3.5.0",
    "redis": "^4.7.1",
    "shadcn-ui": "^0.9.5",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
